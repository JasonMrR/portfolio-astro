--- 
import Section from "../Section.astro";
import {education} from "../../../cv.json";
---

<Section title="Education">
  <ul>
    {education.map(({institution, area, url, startDate, endDate,}) => {
      
      const startYear = new Date(startDate).getFullYear();
      const endYear = new Date(endDate).getFullYear();
      const years = `${startYear} - ${endYear}`;

      return (
        <li>
          <article>
            <header>
              <div>
                <a
                  href={url}
                  target="_blank"
                  title={`See institution: ${institution}`}
                >
                  <h3>{institution}</h3>    
                </a>
                <p>{area}</p>  
              </div>
              <time>
                {years}  
              </time>
            </header>  
          </article>
        </li>
      )
    })}
  </ul>
</Section>

<style>
  header{  
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
  }

  a:hover {
    text-decoration: underline;
  }

  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }
  article h3 {
    font-weight: 500;
    color: #111;
  }

  time {
    font-size: 0.85rem;
    color: #666;
  }

</style>