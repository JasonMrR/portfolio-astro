---
import Section from "../Section.astro";
import { projects } from "../../../cv.json"
---

<Section title="Projects">
  <ul>
    {projects.map(({name, description, highlights, url}) => {
      return <li>
        <article>
          <header>
            <a href={url} title={`See project ${name}`}>
              <h3>{name}</h3>
            </a>
            <p>{description}</p>
          </header>  
          <footer>
            {highlights.map((highlight) => {
              return <span>{highlight}</span>
            })}  
          </footer>
        </article>  
      </li>
    })}
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(
      auto-fill, minmax(200px, 1fr)
    );
    gap: 1rem;
  }

  article {
    border-radius: 8px;
    border: 1px solid #eee;
    gap: 1rem;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }

  header {
    flex: 1;
  }

  article h3 {
    margin-bottom: 4px;
  }

  article a {
    color: #111;
    transition: .3s ease-in;
  }

  article a:hover {
    text-decoration: underline;
  }

  article p {
    font-size: 0.75rem;
    line-height: 1.2rem;
  }


  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px
  }

  footer span {
    background-color: #f2f2f2;
    padding: 0.2rem 0.6rem;
    border-radius: 8px;
    font-size: 0.70rem;
  }

  @media (width < 600px) {
    ul {
      gap: 3rem;
    }
  }
</style>